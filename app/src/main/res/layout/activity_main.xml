<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#F2F2F2">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password Generator"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="70dp"
        />

        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/textview_background" />

    <Button
        android:id="@+id/btnCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp"
        android:paddingHorizontal="12dp"
        android:text="Copy"
        android:textStyle="bold"
        android:textColor="#000000"
        android:backgroundTint="#F2F2F2"
        android:layout_marginStart="8dp" />



    <Switch
        android:id="@+id/switchLowercase"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Incluir letras minúsculas"
        android:checked="true"
        android:trackTint="@drawable/switch_track"
        android:thumbTint="@drawable/switch_thumb" />

    <Switch
        android:id="@+id/switchUppercase"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Incluir letras maiúsculas"
        android:checked="true"
        android:trackTint="@drawable/switch_track"
        android:thumbTint="@drawable/switch_thumb" />

    <Switch
        android:id="@+id/switchNumbers"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Incluir números"
        android:trackTint="@drawable/switch_track"
        android:thumbTint="@drawable/switch_thumb" />

    <Switch
        android:id="@+id/switchSpecialChars"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Incluir caracteres especiais"
        android:checked="true"
        android:trackTint="@drawable/switch_track"
        android:thumbTint="@drawable/switch_thumb" />

    <TextView
        android:id="@+id/tvLengthIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <SeekBar
        android:id="@+id/seekBarLength"
        android:layout_marginHorizontal="33dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="16"
        android:progress="8"
        android:layout_marginTop="16dp"
        android:thumbTint="@color/thumb_color"
        android:secondaryProgressTint="@color/secondary_progress_color"
        android:progressBackgroundTint="@color/background_color" />


    <Button
        android:id="@+id/btnGeneratePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F8EF00"
        android:text="GERAR SENHA"
        android:textColor="#000000"
        android:textStyle="bold"/>

</LinearLayout>